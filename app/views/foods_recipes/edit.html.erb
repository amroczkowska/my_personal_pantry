<!-- Validation failure messages -->
<% if @foods_recipe.errors.any? %>
  <% @foods_recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Foods Recipe #<%= @foods_recipe.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_foods_recipe/<%= @foods_recipe.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for foods_id -->
      <div class="form-group">
        <label for="foods_id" class="control-label">
          Foods
        </label>

        <input type="text" id="foods_id" name="foods_id" placeholder="Foods" class="form-control" value="<%= @foods_recipe.foods_id %>">
      </div>

      <!-- Label and input for recipes_id -->
      <div class="form-group">
        <label for="recipes_id" class="control-label">
          Recipes
        </label>

        <input type="text" id="recipes_id" name="recipes_id" placeholder="Recipes" class="form-control" value="<%= @foods_recipe.recipes_id %>">
      </div>

      <button class="btn btn-warning">
        Update Foods Recipe
      </button>
      or
      <a href="/foods_recipes/<%= @foods_recipe.id %>">Cancel</a>
    </form>
  </div>
</div>
