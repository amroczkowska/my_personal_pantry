<div class="page-header">
  <h1>
    Foods recipes
    <a href="/foods_recipes/new" class="btn btn-lg btn-success">New Foods recipe</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Foods</th>
        <th>Recipes</th>
        <th>Actions</th>
      </tr>

      <% @foods_recipes.each do |foods_recipe| %>
      <tr>
        <td>
          <% if foods_recipe.foods.present? %>
            <a href="/foods/<%= foods_recipe.foods.id %>">
              <%= foods_recipe.foods.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if foods_recipe.recipes.present? %>
            <a href="/recipes/<%= foods_recipe.recipes.id %>">
              <%= foods_recipe.recipes.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/foods_recipes/<%= foods_recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/foods_recipes/<%= foods_recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_foods_recipe/<%= foods_recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @foods_recipes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
