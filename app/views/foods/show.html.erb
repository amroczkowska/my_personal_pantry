<div class="page-header">
  <h3>Food #<%= @food.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @food.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/foods" class="btn btn-primary">
        Back
      </a>
      <a href="/foods/<%= @food.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_food/<%= @food.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Food has many similar_foods -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Similar_foods
      </li>

      <% @food.similar_foods.each do |similar| %>
        <li class="list-group-item">
          <a href="/similars/<%= similar.id %>">
            <%= similar.similar_name %>
          </a>
          <a href="/similars/<%= similar.id %>" class="btn btn-primary">
            Show
          </a>
          <a href="/similars/<%= similar.id %>/edit" class="btn btn-warning">
            Edit
          </a>
          <a href="/delete_similar/<%= similar.id %>" class="btn btn-danger" rel="nofollow">
            Delete
          </a>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_similar" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for similar_name -->
      <div class="form-group">
        <label for="similar_name" class="control-label">
          Similar name
        </label>

        <input type="text" id="similar_name" name="similar_name" placeholder="Similar name" class="form-control" value="">
      </div>

      <!-- Label and input for foods_id -->
      <div class="form-group">
        <label for="foods_id" class="control-label">
          Foods
        </label>

        <%= select_tag(:foods_id, options_from_collection_for_select(Food.all, :id, :name), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
        Create Similar
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Food has many pantries -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Pantries
      </li>

      <% @food.pantries.each do |available| %>
        <li class="list-group-item">
          <a href="/availables/<%= available.id %>">
            <%= available.foods_id %>
          </a>
          <a href="/availables/<%= available.id %>" class="btn btn-primary">
            Show
          </a>
          <a href="/availables/<%= available.id %>/edit" class="btn btn-warning">
            Edit
          </a>
          <a href="/delete_available/<%= available.id %>" class="btn btn-danger" rel="nofollow">
            Delete
          </a>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_available" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for foods_id -->
      <div class="form-group">
        <label for="foods_id" class="control-label">
          Foods
        </label>

        <%= select_tag(:foods_id, options_from_collection_for_select(Food.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="control-label">
          Quantity
        </label>

        <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="">
      </div>

      <!-- Label and input for purchase_date -->
      <div class="form-group">
        <label for="purchase_date" class="control-label">
          Purchase date
        </label>

        <input type="text" id="purchase_date" name="purchase_date" placeholder="Purchase date" class="form-control" value="">
      </div>

      <!-- Label and input for expiration_date -->
      <div class="form-group">
        <label for="expiration_date" class="control-label">
          Expiration date
        </label>

        <input type="text" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="">
