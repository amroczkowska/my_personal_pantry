<div class="page-header">
  <h1>
    Recipes
    <a href="/recipes/new" class="btn btn-lg btn-success">New Recipe</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "recipes_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :type_cont, "Type contains" %>
    <%= f.text_field :type_cont, :class => "form-control", :placeholder => "Type contains" %>
  </div>

<div class="form-group">
  <%= f.label :ease, "Ease" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :ease_gteq, :class => "form-control", :placeholder => "Ease greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :ease_lteq, :class => "form-control", :placeholder => "Ease less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :instructions_cont, "Instructions contains" %>
    <%= f.text_field :instructions_cont, :class => "form-control", :placeholder => "Instructions contains" %>
  </div>

<div class="form-group">
    <%= f.label :url_cont, "Url contains" %>
    <%= f.text_field :url_cont, :class => "form-control", :placeholder => "Url contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :foods_name_cont, "Food name contains" %>
      <%= f.text_field :foods_name_cont, :class => "form-control", :placeholder => "Food name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/recipes" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#recipes_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Instructions</th>
        <th>Ease</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.url %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.ease %></td>
        <td><%= recipe.type %></td>
        <td>
          <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recipes, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
